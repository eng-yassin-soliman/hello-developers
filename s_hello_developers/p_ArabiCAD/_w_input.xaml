<Window x:Class="p_ArabiCAD._w_input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p_ArabiCAD" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" SizeToContent="WidthAndHeight" FontSize="16">

    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal">
            <TextBox Width="80" Margin="5" Padding="5"/>
            <TextBox Width="80" Margin="5" Padding="5"/>
            <TextBox Width="80" Margin="5" Padding="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBox Width="80" Margin="5" Padding="5"/>
            <TextBox Width="80" Margin="5" Padding="5"/>
            <TextBox Width="80" Margin="5" Padding="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Button Width="80" Margin="5" Padding="5">تم</Button>
            <Button Width="80" Margin="5" Padding="5">اللون</Button>
        </StackPanel>
    </StackPanel>
</Window>