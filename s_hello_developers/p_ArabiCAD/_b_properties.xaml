<UserControl x:Class="p_ArabiCAD._b_properties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:p_ArabiCAD"
             mc:Ignorable="d">
    <Border Margin="5" BorderThickness="1" BorderBrush="Silver">
        <StackPanel Orientation="Horizontal">
            <Rectangle Name="b_str_" MouseUp="v_color_" Width="20" Height="20" Margin="5" Stroke="Silver" Fill="Silver"/>
            <Rectangle Name="b_fil_" MouseUp="v_color_" Width="20" Height="20" Margin="5" Stroke="Silver" Fill="Transparent"/>

            <Border MouseUp="v_type_" Height="20" Padding="5" Margin="5" BorderThickness="1" BorderBrush="White" Background="White">
                <Line Name="b_typ_" StrokeDashCap="Round" Stroke="Silver" VerticalAlignment="Center" X1="0" X2="35" Y1="2" Y2="2" StrokeThickness="2"/>
            </Border>

            <CheckBox Name="b_cls_" VerticalAlignment="Center" Margin="5" IsChecked="False">مغلق</CheckBox>
        </StackPanel>
    </Border>
</UserControl>