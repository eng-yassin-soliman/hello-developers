<Window x:Class="p_ArabiCAD._w_figure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" FontSize="12"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p_ArabiCAD" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" SizeToContent="WidthAndHeight" FlowDirection="RightToLeft"
        Title="إضافة شكل">
    <StackPanel Margin="20">
        <TextBlock Margin="5">اسم الشكل</TextBlock>
        <TextBox Name="b_nam_" Margin="5" Padding="5" Width="150"></TextBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Canvas Name="b_bck_" MouseUp="v_pickcolor_" Margin="5" Width="20" Height="20" Background="Cornsilk"></Canvas>
            <Canvas Name="b_for_" MouseUp="v_pickcolor_" Margin="5" Width="20" Height="20" Background="Silver"></Canvas>
            <Button Name="b_add_" Click="v_add_" Padding="5" Margin="5" Width="50">تم</Button>
        </StackPanel>
    </StackPanel>
</Window>